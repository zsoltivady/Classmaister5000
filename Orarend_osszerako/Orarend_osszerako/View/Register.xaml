<Page x:Class="Orarend_osszerako.View.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Orarend_osszerako.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Register">

    <Grid>
        <StackPanel Width="200" HorizontalAlignment="center">
            <TextBlock Text="Log in" FontWeight="Bold" HorizontalAlignment="Center" Margin="20" FontSize="20"/>
            <TextBlock Text="Name" Margin="5"/>
            <TextBox x:Name="userName" MinWidth="190" HorizontalAlignment="center"/>
            <TextBlock Text="Password" Margin="5"/>
            <PasswordBox x:Name="userPassword" MinWidth="190" HorizontalAlignment="center"/>
            <Button Content="Log in" Margin="3"/>
            <Button Content="Register" Margin="3"/>
        </StackPanel>
    </Grid>
</Page>
